@model PgMenuViewModel
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Menu info</h2>
                <ul class="nav navbar-right panel_toolbox ">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <form form asp-action="UpdateMenuInfo" asp-controller="PageSetting" asp-anti-forgery="true" class="form-horizontal form-label-left">
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Name"></label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" asp-for="Name" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Action"></label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" asp-for="Action" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Controller"></label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" asp-for="Controller" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Area"></label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" asp-for="Area" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Anchor"></label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" asp-for="Anchor" class="form-control has-feedback-left">
                                    <span class="fa fa-anchor form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Tooltip"></label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" asp-for="Tooltip" class="form-control has-feedback-left">
                                    <span class="fa fa-info form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="FaIcon">Icon</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" asp-for="FaIcon" class="form-control has-feedback-left">
                                    <span class="fa fa-file-image-o form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="IsActive"></label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="checkbox" asp-for="IsActive" class="js-switch" checked>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-1 ">
                            <button type="submit" class="btn btn-success">Update</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>